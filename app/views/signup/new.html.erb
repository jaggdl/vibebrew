<div class="mx-auto md:w-2/3 w-full">
  <% if alert = flash[:alert] %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Welcome to Vibebrew</h1>
  <p class="text-gray-600 mt-2 mb-6">Create your account to get started.</p>

  <%= render "signup/form", user: @signup, url: signup_path, submit_text: "Create account" %>
</div>
