<% if recipes.any? %>
  <div>
    <h2 class="font-bold text-xl"><%= title %></h2>
    <ul class="gap-2 flex flex-col">
      <% recipes.each do |recipe| %>
        <li>
          <%= link_to recipe_path(recipe), class: "card font-semibold text-lg px-4 py-2 flex justify-between items-center" do %>
            <span>
              <%= recipe.display_name %>
              <% unless recipe.generated? %>
                <em>(generating...)</em>
              <% end %>
            </span>
            <span class="text-sm font-normal text-gray-500"><%= recipe.brew_method_name %></span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
