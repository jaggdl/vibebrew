<li id="<%= dom_id(recipe) %>" class="border-b-1 last:border-b-0 border-gray-200 hover:bg-gray-100">
  <%= link_to recipe_link(recipe), class: "text-lg flex items-center p-2 gap-1.5" do %>
    <span class="text-sm font-normal text-gray-700 shrink-0 flex gap-1 items-center">
      <%= lucide_icon(recipe.brew_method_icon, class: 'h-4 w-4 shrink-0') %>
      <%= recipe.brew_method_label %>
    </span>
    <span class="text-gray-300">
      â€¢
    </span>
    <span class="flex items-center gap-2 min-w-0">
      <% if recipe.favorited_by_current_user %>
        <%= lucide_icon('heart', class: 'h-4 w-4 text-red-500 shrink-0') %>
      <% end %>
      <% if recipe.published? %>
        <%= lucide_icon('eye', class: 'h-4 w-4 shrink-0') %>
      <% end %>
      <span class="truncate"><%= recipe.display_name %></span>
      <% unless recipe.generated? %>
        <em class="font-normal text-gray-500 shrink-0">(generating...)</em>
      <% end %>
    </span>
  <% end %>
</li>
