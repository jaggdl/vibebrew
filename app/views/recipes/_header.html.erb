<h2 class="text-2xl font-bold text-gray-900"><%= recipe.name %></h2>

<% if recipe.source_recipe.present? %>
  <div class="mt-2 text-sm text-gray-500 bg-gray-50 border border-gray-200 rounded-lg p-3">
    <p class="font-medium">
      Iterated from <%= link_to recipe.source_recipe.name, recipe_path(recipe.source_recipe), class: "text-blue-600 hover:underline" %>
    </p>
    <% if recipe.prompt.present? %>
      <p class="mt-1 text-gray-600 italic">"<%= recipe.prompt %>"</p>
    <% end %>
  </div>
<% end %>

<div class="mt-2 text-gray-600"><%= simple_format(recipe.description, class: "m-0") %></div>
