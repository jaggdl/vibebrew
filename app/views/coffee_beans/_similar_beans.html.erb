<div class="mt-8">
  <h2 class="font-bold text-xl mb-4">Similar Coffee Beans</h2>
  <% if similar_beans.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <%= render similar_beans %>
    </div>
  <% else %>
    <p class="text-gray-500 italic">No similar coffee beans found.</p>
  <% end %>
</div>
