<%= link_to coffee_bean do %>
  <div class="card flex gap-2 overflow-hidden">
    <%= image_tag coffee_bean.images.first.variant(resize_to_fill: [192, 192]), class: "h-24 w-24 object-cover" %>

    <div class="p-2 flex flex-col">
      <div class="flex items-center gap-2">
        <h3 class="font-semibold text-xl">
          <%= coffee_bean.brand.present? ? coffee_bean.brand : "Untitled Coffee Bean" %>
        </h3>
        <% coffee_bean.process.each do |p| %>
          <span class="badge"><%= p %></span>
        <% end %>
      </div>
      <span class="text-gray-800">
        <%= coffee_bean.variety.join(", ") %>
      </span>
      <span class="text-gray-800">
        <%= coffee_bean.origin %>
      </span>
    </div>
  </div>
<% end %>
