<%= form_with model: [recipe, RecipeComment.new], id: "new_recipe_comment_form", class: "bg-gray-50 border border-gray-200 rounded-lg p-4" do |form| %>
  <div class="flex flex-col mb-4 gap-2">
    <%= form.label :body, "Comment", class: "input-label" %>
    <%= form.text_area :body, placeholder: "Share your thoughts about this recipe...", rows: 3, class: "text-input" %>
  </div>
  <div>
    <%= form.submit "Add Comment", class: "button" %>
  </div>
<% end %>
