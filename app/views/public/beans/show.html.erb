<%= render "layouts/seo_meta", seo_metadata: @coffee_bean.seo_metadata %>

<div class="flex items-center justify-between">
  <div class="flex items-center gap-2">
    <span class="italic text-sm">Brewed by </span>
    <b class="flex items-center"><%= render @coffee_bean.user %></b>
  </div>
  <%= render "shared/share_button" %>
</div>

<div class="mb-4">
  <h1 class="title"><%= @coffee_bean.display_name %></h1>
</div>

<%= render "shared/image_gallery", images: @coffee_bean.images %>

<%= render "coffee_beans/details", coffee_bean: @coffee_bean %>

<% if @coffee_bean.published_recipes.any? %>
  <div class="mt-8">
    <h2 class="font-bold text-xl mb-4">Recipes</h2>
    <div class="space-y-2">
      <%= render @coffee_bean.published_recipes %>
    </div>
  </div>
<% end %>

<%= render "comments/comments", commentable: @coffee_bean, comments: @coffee_bean.comments.published.order(created_at: :desc), show_form: false %>

<%= render "coffee_beans/similar_beans", similar_beans: @coffee_bean.similar(limit: 4).published %>
